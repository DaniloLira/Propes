<% content_for :form_title do %> Impuls√£o <% end %>

<% content_for :form_fields do %>
    <%= form_with model: @impulsion, local: true do |f| %>
		<% for field in @impulsion.attributes %>
			<% if not ['id','created_at', 'updated_at', 'user_id','athlete_id', 'result', 'qualitative_result'].include? field[0] %>
				<p class='text-left'>
					<label><%= t field[0] %></label>
					<%= f.text_field field[0], class: 'form-control' %>
				</p>
			<% end %>
		<% end %>
      
		<p><%= f.submit 'Salvar', class: 'btn salvar' %></p>
    <% end %>
<% end %>

<%= render '/layouts/evaluation' %>