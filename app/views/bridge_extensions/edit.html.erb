<% content_for :form_title do %> de edição Extensão de ponte <% end %>

<% content_for :form_fields do %>
    <%= form_for(@bridge_extension) do |f| %>
        <% for field in @bridge_extension.attributes %>
            
            <% if not ['id','created_at','user_id','athletes_id','updated_at'].include? field[0] %>
                <p class='text-left'>
                    <label><%= t field[0] %></label>
                    <%= f.text_field field[0], class: 'form-control'%> 
                </p>                                

            <% elsif field[0] == 'avatar' %>
                <p class='text-left'>
                    <label><%= t field[0] %></label>
                    <p class='text-left'><%= f.file_field field[0], class: 'file_field' %></p>
                </p>
            <% end %>
        <% end %>
        

        <p class='text-center'><%= f.submit 'Salvar Alterações', class: 'btn btn-primary' %></p>
    <% end %>
<% end %>

<%= render '/layouts/evaluation' %>