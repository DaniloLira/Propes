<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

<script type="text/javascript">
    google.charts.load('current', {packages: ['corechart']});
    //google.charts.setOnLoadCallback(drawChart);
    var on = false;
    
    function drawChart(id, resultado, titulo) {
      if (on){
          document.getElementById('myColumnChart' + id).innerHTML = "";
          on = false;
      } else {
          //ESSA FUNÇÃO É PARA SUMIR COM O GRÁFICO SE APERTAR DE NOVO   
          on = true;
      }    
      // Define the chart to be drawn.
      var data = new google.visualization.DataTable();
     
      data.addColumn('string', 'Resultado');
      data.addColumn('number', 'Resultado_1');
      data.addRows([
        ['Resultado', resultado],

      ]);
      var options = {'title': titulo, 'height': 300, 'weight': 200 , 'backgroundColor.strokeWidth': 'black'
};
      // Instantiate and draw the chart.
      var chart = new google.visualization.ColumnChart(document.getElementById('myColumnChart' + id));
      
      chart.draw(data, options);
    }
</script>


<div id="accordion" >
    
    <% if athlete_history(@athlete.id).length == 0 %>
        <div class='text-center'>
            <h3> Nenhuma avaliação feita, vamos fazer agora :) </h3>
        </div>
    <% end %>
    
    
    <% actual_day = nil %>
    <% counter = 0 %>
    <% athlete_history(@athlete.id).each do |a| %>
    
        <% if not actual_day == a[0].updated_at.strftime("%d/%m/%Y") %>
            <% actual_day =  a[0].updated_at.strftime("%d/%m/%Y") %>
            <div class='panel-header '>
                <h5> Dia: <%= actual_day %> </h5>
            </div>
        <% end %>
        
        <div class="card" style='margin-bottom: 2%;'>
            <div class="card-header" id="headingOne<%=counter%>">
                <button class="btn col-md-12 text-left" data-toggle="collapse" data-target="#history_<%= counter %>" aria-expanded="false" aria-controls="history_<%= a[0].id.to_s %>">
                    <div class='row'>
                        <div class='col-md-6'>
                            <a> <%= t a[1] %> - <%= a[0].updated_at.strftime('%H:%M') %> </a>
                        </div>
                        <div class='col-md-6'>
                            <div class='row '>
                                <div class='col-md-8 text-right'>
                                    <%= button_to "Editar", a[0] , method: :edit , class: "btn btn-warning"%>
                                </div>
                                
                                <div class='col-md-4 '>
                                    <%= button_to "Deletar", a[0] , method: :delete , class: "btn btn-danger"%>
                                </div>
                            </div>
                            
                            
                        </div>                        
                    </div>
                </button>
            </div>
            
            <div id="history_<%=counter%>" class="collapse" aria-labelledby="heading<%=counter%>" data-parent="#accordion" >
                <div class="card-body row ">
                    
                    <% if a[0].attributes.include? 'result' %>
                        <button onclick="drawChart(<%=counter%>, 9, '<%= t a[1] %>')" class='btn btn-link ' > Ver Gráfico </button> 
                        
                        <script language="javascript" type="text/javascript">
                            var element = document.getElementById("headingOne<%=counter%>");
                            var result = "<%= a[0].result %>";
                            
                            switch (result){
                                // SWITCH PARA BOTAR A COR DA BARRA DEPENDENDO DO RESULTADO
                                case 0:
                                   element.classList.add("goodResult"); 
                                   break;
                                case 1:
                                    element.classList.add("averageResult");
                                    break;
                                case 2:
                                    element.classList.add("badResult");                                
                            }

                        </script>
                    <% end %> 
                    
                    <div class='col-md-12'>
                        <div id="myColumnChart<%=counter%>"  class='text-center'></div>
                    </div>
                    

                    <div class='col-md-12'>
                        <table class="table table-sm">
                            <tbody>
                                <% a[0].attributes.each do |at| %>
                                    <% if not ["id", "athlete_id", "updated_at", "created_at", "user_id"].include? at[0] %>
                                        <tr>
                                            <td><strong> <%= t at[0] %>:</strong></td>
                                            <td><%= at[1] %></td>
                                        </tr>
                                    <% end %>    
                                <% end %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <% counter += 1 %>    
    <% end %> 
</div>