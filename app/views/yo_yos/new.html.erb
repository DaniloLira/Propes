<head>
    <%= javascript_include_tag 'yo_yo', 'data-turbolinks-track': 'reload' %>
</head>
<% content_for :form_title do %> Yo Yo <% end %>

<% content_for :form_fields do %>
	<% athlete = Athlete.find(session[:athlete_id]) %>
	<%= form_with model: @yo_yo, local: true do |f| %>
		<% for field in @yo_yo.attributes %>
			<% if not ['id','created_at', 'updated_at', 'user_id','athlete_id',"result","qualitative_result"].include? field[0] %>
			<p class='text-left'>
				<%= f.label field[0] %>
				<%= f.text_field field[0], class: 'form-control'%>
			</p>
			<% end %>
		<% end %>
		
		<p><input type="submit" name="commit" value="Salvar" class="btn salvar" data-disable-with="Salvar"></p>
	<% end %>
<% end %>

<%= render '/layouts/evaluation' %>