<html >
    <head>
      <%= javascript_include_tag 'cutaneous_folds'%>
    </head>
    <body>
        <div class='container text-center col-md-7 panel'>
            
            <div class='row'>
                <h1 class='col-md-12' style='color: #70C4FF;'>
                    Dobra Cut√¢nea
                </h1>
            </div>
            
            <div class='row justify-content-md-center'>
              <div class="col-md-11" >
                <%= form_with model: @cutaneous_fold, local: true do |f| %>
                  <% for field in @cutaneous_fold.attributes %>
                      <% if not ['id','created_at', 'updated_at', 'user_id','athlete_id', 'result'].include? field[0] %>
                        <p class='text-left'>
                            <%= f.label t field[0] %>
                            <%= f.number_field field[0], class: 'form-control' %>
                        </p>
                      <% end %>
                  <% end %>
                  
                  <p><%= f.submit 'Salvar', class: 'btn salvar' %></p>
                <% end %>
              </div>
            </div>
        </div>
    </body>
</html>