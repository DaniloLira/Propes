<html >
    <body>
        <div class='container col-md-7'>
            
            <div class='row text-center'>
                <h1 class='col-md-12' style='color: #70C4FF;'>
                    Atualize seu perfil 
                </h1>
            </div>
            
            <div class='row justify-content-md-center'>
                <div class="col-md-11" >
                    <%= form_for(@user) do |f| %>
                        <% for field in @user.attributes %>
                            
                            <% if not ['id','created_at', 'updated_at', 'avatar','password_digest', 'approved', 'role'].include? field[0] %>
                                <p class='text-left'>
                                    <label><%= t field[0] %></label>
                                    <%= f.text_field field[0], class: 'form-control'%> 
                                </p>                                
    
                            <% elsif field[0] == 'avatar' %>
                                <p class='text-left'>
                                    <label><%= t field[0] %></label>
                                    <p class='text-left'><%= f.file_field field[0], class: 'file_field' %></p>
                                </p>
                            <% end %>
                        
                        <% end %>
                        
                            <p class='text-left'>
                                <label>Senha</label>
                                <%= f.password_field :password, class: 'form-control' %>
                            </p>                   

                            
                          
                        <%= f.submit 'Atualizar', class: "btn btn-primary text-center" %>
                    <% end %>
                </div>
            </div>
        </div>
    </body>
</html>
