<html >    
    <body>
        <div class='container col-md-7'>
            
            <div class='row text-center '>
                <h1 class='col-md-12' style='color: #70C4FF;'>
                    Cadastre-se como atleta
                </h1>
            </div>
            
            <div class='row justify-content-md-center'>
              <div class="col-md-11" >
                <%= form_with model: @athlete, validate: true, local: true do |f| %>
                    <% for field in @athlete.attributes %>
                        
                        <% if not ['id','created_at', 'updated_at', 'avatar', 'user_id'].include? field[0] %>
                            <p class='text-left'>
                                <label><%= t field[0] %></label>
                                <%= f.text_field field[0], class: 'form-control' %> 
                            </p>                                

                        <% elsif field[0] == 'avatar' %>
                            <p class='text-left'>
                                <label><%= t field[0] %></label>
                                <p><%= f.file_field field[0], class: 'file_field' %></p>
                            </p>
                        <% end %>
                    <% end %>
                      
                    <p><%= f.submit 'Cadastrar', class: 'btn salvar' %></p>
                <% end %>
              </div>
            </div>
        </div>
    </body>
</html>
