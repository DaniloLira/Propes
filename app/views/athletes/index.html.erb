<html>
    <body>
        <div class="container col-md-7">
            
            <div class="row" style='margin-bottom: 2%;'>
                <div class="col-md-12">
                    <%= form_tag(athletes_path, method: :get) do %>
                        <div class="row">
                            <div class="col-md-4 ">
                                <%= text_field_tag :name, params[:name], class: "form-control", placeholder: "Pesquisar" %>
                            </div>
                        
                            <div class="col-md-2 ">
                                <%= submit_tag "Procurar", name: nil, class: "btn btn-primary" %>
                            </div>
                        </div> 
                    <% end %>    
                </div>            
            </div>
            
            <div class="row">
              <div class="col-md-12">
                <table class="table table-sm text-center ">
                    
                    <thead class="thead"> 
                        <th width="70%" scope="col" > Atleta</th>
                        <th scope="col"> Visualizar </th>
                        <th scope="col"> Deletar </th>
                    </thead>
                 
                    <tbody>
                        <% @athletes.each do |a| %>
                            <tr>
                                <td class='text-left'> 
                                    <% if not a.avatar.attached? %>
                                        <image class="rounded-circle" <%= image_tag("Missing_avatar.svg.png", :size => "40x40") %> 
                                    <% else %>    
                                        <image class="rounded-circle" <%= image_tag(a.avatar, :size => "40x40") %>
                                    <% end %>
                                    <a><%= a.name %></a> 
                                </td>
                                <td> <%= button_to "Visualizar", a , method: :get , :class => "btn btn-primary" %></td>
                                <td> <%= button_to "Deletar", a , method: :delete , :class => "btn btn-danger", data: {confirm: "VocÃª tem certeza ?" }%></td>
                            </tr>
                        <% end %>        
                    </tbody>
                </table>                 
              </div>
            </div>
            
        </div>
    </body>
</html>
