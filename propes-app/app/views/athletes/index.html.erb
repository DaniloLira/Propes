<table class="table table-striped ">
    

    <thead class='thead-dark'> 
        <th scope='col'> ID </th>
        <th scope='col'> Nome </th>
        <th scope='col'> Visualizar </th>
        <th scope='col'> Deletar </th>
    </thead>
 
    <tbody>
        <%= form_tag(athletes_path, method: :get) do %>
          <%= text_field_tag :name, params[:name] %>
          <%= submit_tag 'Search', name: nil %>
        <% end %>   
        
        <% @athletes.each do |a| %>
            <tr>
                <th scope='row'> <%= a.id %></th>
                <td> <%= a.name %> </td>
                <td> <%= button_to 'Visualizar', a , method: :get , :class => 'btn btn-primary' %></td>
                <td> <%= button_to 'Delete', a , method: :delete , :class => 'btn btn-danger' %></td>
            </tr>
        <% end %>        
    </tbody>
</table>